# Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model - Use GPT-5 or your provisioned model variant (defaults to gpt-5)
OPENAI_MODEL=gpt-5

# Database Connection String - Update with your SQL Server details
# 
# Option 1: SQL Server Authentication (username/password)
# DB_CONNECTION_STRING=DRIVER={ODBC Driver 18 for SQL Server};SERVER=localhost,1433;DATABASE=AdventureWorks2022;UID=sa;PWD=your_password_here;Encrypt=Yes;TrustServerCertificate=Yes
#
# Option 2: Windows Authentication (uses your Windows credentials)
# DB_CONNECTION_STRING=DRIVER={ODBC Driver 17 for SQL Server};SERVER=PRODSVCREPORT70;DATABASE=CnZenReport;Trusted_Connection=Yes;
#
# Current default (update based on your setup):
DB_CONNECTION_STRING=DRIVER={ODBC Driver 17 for SQL Server};SERVER=PRODSVCREPORT70;DATABASE=CnZenReport;Trusted_Connection=Yes;

# OpenAI Request Configuration
OPENAI_REQUEST_TIMEOUT=120
OPENAI_MAX_RETRIES=2

# Query Result Limits (prevents JSON overflow with large datasets)
# MAX_ROWS_FETCH: Maximum rows to fetch from database (default: 100000)
# MAX_ROWS_RESPONSE: Maximum rows to send in API response (default: 50000)
MAX_ROWS_FETCH=100000
MAX_ROWS_RESPONSE=50000
