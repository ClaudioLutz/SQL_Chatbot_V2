# Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database Configuration (ODBC Driver 18 for SQL Server)
# Requires Microsoft ODBC Driver 18 for SQL Server installed
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=AdventureWorks2022
DB_USER=sa
DB_PASSWORD=YourStrong!Passw0rd
DB_ENCRYPT=yes
# TrustServerCertificate=yes for dev only; use 'no' with trusted cert in production
DB_TRUST_SERVER_CERT=yes

# Application Configuration
LOG_LEVEL=INFO
# Comma-separated list of CORS origins for development
# CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
